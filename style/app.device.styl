[data-atoms=app]
  > aside, > article
    display-flex()
    flex-direction column
    height: inherit
    transform translateZ(0)

    > header, > footer
      position: relative

    > header, > nav, > form,  > footer
      flex-shrink 0

    > header
      order 1

    > nav, > form
      order 2

    > section
      order 3
      flex-grow 2

    > footer
      order 4

@media only screen and (min-width: MOBILE)
     , only screen and (min-device-width:MOBILE) and (orientation:portrait)
     , only screen and (min-device-height:MOBILE) and (orientation:landscape)
  [data-atoms=app]
    display-flex()
    flex-direction row
    > [data-organism-aside], > [data-organism-article]
      position: relative

@media only screen and (max-width: MOBILE)
     , only screen and (max-device-width: MOBILE) and (orientation: portrait)
     , only screen and (max-device-height: MOBILE) and (orientation: landscape)
  [data-atoms=app]
    > [data-organism-aside], > [data-organism-article]
      position: absolute
