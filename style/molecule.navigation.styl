[data-atoms=app]
  > [data-organism=article]
    > , > footer, > section
      [data-molecule=navigation]
        width: 100%
        display-flex()
        align-content stretch
        > [data-atom=button]
          flex-grow 1
          margin: 0
          padding: 0
          width: 100%
          text-align: center

  > article > [data-molecule=navigation]
    height: HEADER_EXTRA_HEIGHT
    > button
      font-size: FONT_SIZE_TINY
      > small
        display: none
    &.scroll
      margin-top: -(HEADER_EXTRA_HEIGHT + .5rem)

  > * > header [data-molecule=navigation]
    z-index: 1
    height:  HEADER_HEIGHT
    min-width: HEADER_HEIGHT
    text-align: center

  > article > section [data-molecule=navigation]
    &, > button
      height:  HEADER_HEIGHT

  > aside > section [data-molecule=navigation]
    min-height: HEADER_HEIGHT

  > article > footer [data-molecule=navigation]
    height:  FOOTER_HEIGHT
    > button
      height:  FOOTER_HEIGHT
      font-size: (FONT_SIZE_NORMAL * 1.5)

  > [data-system=modal] > article
    > footer
      > nav
        font-size: FONT_SIZE_TINY
        text-align: right
        width: 100%
        &:not(.block)
          display: inline-block
        &.block
          > button
            display: block
            width: 100%
            text-align: right
            float: none
        > button
          padding: 0 .4rem
          line-height: HEIGHT = (2.5 * FONT_SIZE_TINY)
