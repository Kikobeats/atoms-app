nav
  // line-height: 1rem

  [data-atoms="app"] > article section &, [data-atoms="app"] > article footer &
    width: 100%
    display-box()
    box-pack(justify)
    & > button
      box-flex(1)
      display: block
      padding: 0
      text-align: center
      width: 1px
      margin: 0

  [data-atoms="app"] header &
    height:  HEADER_HEIGHT
    min-width: HEADER_HEIGHT

  [data-atoms="app"] section & > button
    height:  HEADER_HEIGHT

  [data-atoms="app"] > article footer &
    height:  FOOTER_HEIGHT
    & > button
      height:  FOOTER_HEIGHT
      font-size: (FONT_SIZE_NORMAL * 2.25)



  [data-atoms="app"] aside section &
    & > a
      display: block
      line-height: HEADER_HEIGHT
      & .icon
        font-size: FONT_SIZE_BIG
        margin-right: 0.25rem
