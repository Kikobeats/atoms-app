nav
  // line-height: 1rem

  [data-atoms="app"] > article section &, [data-atoms="app"] > article footer &
    width: 100%
    display-box()
    box-pack(justify)
    & > button
      box-flex(1)
      display: block
      margin: 0
      padding: 0
      width: 1px
      text-align: center

  [data-atoms="app"] header &
    height:  HEADER_HEIGHT
    min-width: (HEADER_HEIGHT * 0.75)

  [data-atoms="app"] section &
    &, > button
      height:  HEADER_HEIGHT

  [data-atoms="app"] > article footer &
    height:  FOOTER_HEIGHT
    & > button
      height:  FOOTER_HEIGHT
      font-size: (FONT_SIZE_NORMAL * 1.5)

  [data-atoms="app"] aside section &
    & > a
      display: block
      line-height: HEADER_HEIGHT
      & .icon
        font-size: FONT_SIZE_BIG
        margin-right: 0.25rem
