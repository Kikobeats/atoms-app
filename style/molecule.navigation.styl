nav
  // line-height: 1rem

  body > article section &, body > article footer &
    width: 100%
    display-box()
    box-pack(justify)
    & > button
      box-flex(1)
      display: block
      padding: 0
      text-align: center
      width: 1px
      margin: 0

  section & > button
    height:  HEADER_HEIGHT

  body > article footer & > button
    height:  FOOTER_HEIGHT
    font-size: (FONT_SIZE_NORMAL * 2.25)



  aside section &
    & > a
      display: block
      line-height: HEADER_HEIGHT
      & .icon
        font-size: FONT_SIZE_BIG
        margin-right: 0.25rem
