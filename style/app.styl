[data-atoms="app"], html
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  overflow: hidden

[data-atoms="app"]
  vendor(perspective, 800px)
  vendor(transform-style, preserve-3d)

  & > aside, & > article
    display-box()
    box-orient(vertical)
    height: inherit
    webkit-transform: translate3d(0,0,0)

    & > header, > footer
      box-flex(0)
      position: relative

    & > header
      ordinal-group(1)

    & > nav
      ordinal-group(2)

    & > section
      box-flex(1)
      ordinal-group(3)

    & > footer
      ordinal-group(4)

  /* -------------------------- CLASSES -------------------------- */
  :not(.align)
    &.left
      float: left
    &.right
      float: right

  .align
    &.left
      text-align: left
    &.center
      text-align: center
    &.right
      text-align: right
    &.justify
      text-align: justify

  .rounded
    border-radius: 1rem
  .circular
    border-radius: 500rem

  .margin-top
    margin-top: PADDING
  .margin-right
    margin-right: PADDING
  .margin-bottom
    margin-bottom: PADDING
  .margin-left
    margin-left: PADDING
  .margin-all
    margin: PADDING

  .padding-top
    padding-top: PADDING
  .padding-right
    padding-right: PADDING
  .padding-bottom
    padding-bottom: PADDING
  .padding-left
    padding-left: PADDING
  .padding-all
    padding: PADDING



/* -------------------------- CLASSES -------------------------- */
@keyframes figure-loading
  0%
    transform rotate(0deg)
  100%
    transform rotate(359deg)
