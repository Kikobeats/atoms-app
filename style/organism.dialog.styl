[data-system=dialog]
  z-index: 1980
  position: absolute
  left: 0px
  width: inherit
  overflow: hidden

  &:not(.no-block)
    top: 0px
    height: inherit
    display-flex()
    justify-content center
    align-content center
    align-items center

  &.no-block
    bottom: 0px
    height: HEIGHT = (HEADER_HEIGHT / 2)
    padding-top: (.5 * PADDING)
    line-height: HEIGHT
    &.expand
      height: (HEADER_HEIGHT / 2) + (HEADER_HEIGHT * 1.1)


  &:not(.active)
    visibility: hidden
  &.active
    visibility: visible

  > [data-organism-dialog]
    backface-visibility hidden
    transform translateZ(0)

  > [data-organism-dialog=loading]
    SIZE = .6rem
    padding: SIZE
    &::before, &::after
      content: ""
      display: block
      width: (1.75 * SIZE)
      height: (1.75 * SIZE)
    &::before
      float: left
      margin-right: (SIZE / 2)
    &::after
      float: right
      margin-left: (SIZE / 2)

  > [data-organism-dialog=push]
    PADDING = (.75 * PADDING)
    > h1
      font-size: FONT_SIZE_SMALL
      font-weight: normal
      padding: 0 PADDING
    > section
      height: (1.25 * HEADER_HEIGHT)
      padding: PADDING
      display-flex()
      flex-direction row
      justify-content center
      align-content center
      text-align: -webkit-match-parent
      SIZE = 2.35rem
      > figure
        height: SIZE
        width: SIZE
        margin-right: PADDING
        background-size: cover
        flex-shrink 0
      > p
        flex-grow 2
        font-size: FONT_SIZE_TINY
        line-height: FONT_SIZE_BIG
        height: SIZE
        overflow: hidden


  > :not([data-organism-dialog=loading]):not([data-organism-dialog=push])
    width: MODAL_WIDTH
    PAD = (1.5 * PADDING)
    > [data-organism-header]
      padding: PADDING PAD
      > *
        display: inline-block
        margin-right: .25rem
        font-size: FONT_SIZE_BIG
    > [data-organism-section]
      padding: (.75 * PAD) PAD
    > [data-organism-footer]
      padding: PADDING PAD

    &:not(.cancel):not(.accept):not(.warning)
      > [data-organism-header] + [data-organism-section]
        padding-top: 0
