[data-atoms="app"]
  input[type="checkbox"]
    display: block
    position: relative
    height: (FORM_CIRCLE_HEIGHT + 4)
    width: (FORM_CIRCLE_HEIGHT * 2)
    margin: 0.2rem 0
    cursor: pointer

    &:after
      content: ''
      position: absolute
      display: block
      width: SIZE = FORM_CIRCLE_HEIGHT
      height: SIZE
      top: 2px
      left: 2px

    &:checked
      &:after
        left: (FORM_CIRCLE_HEIGHT - 2)

  label + input[type="checkbox"], input[type="checkbox"] + input[type="checkbox"]
    display: inline-table
    vertical-align: middle
    margin-left: .5rem

  input[type="checkbox"] + label
    display: block
