[data-atoms=app]
  [data-organism-section] > [data-molecule-form=search]
    position: relative
    width: inherit
    > *
      margin-top: 0px !important
      margin-bottom: 0px !important
    > [data-atom-button]
      position: absolute
      top: 0px
      right: 0px
      & , & > .icon
        line-height: 0.85rem

  [data-organism-article] > [data-molecule-form=search]
    min-height: HEADER_EXTRA_HEIGHT
    > [data-atom-input]
      margin: 0 !important
      border: none
      line-height: 1.7rem
      padding: .5rem
    > [data-atom-button]
      display: none
    &.scroll
      margin-top: -(HEADER_EXTRA_HEIGHT + .5rem)
