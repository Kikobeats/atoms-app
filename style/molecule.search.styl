[data-atoms="app"]
  [data-molecule="search"]
    position: relative
    width: 100%
    > *
      margin-top: 0px !important
      margin-bottom: 0px !important
    > button
      position: absolute
      top: 0px
      right: 0px
      & , & > .icon
        line-height: 0.85rem

  [data-molecule="navigation"] > [data-molecule="search"]
    padding: AIR = .3rem
    > *
      height: (ARTICLE_NAV_HEIGHT - AIR)
    > button
      top: AIR
      right: AIR
      width: 2.25rem
