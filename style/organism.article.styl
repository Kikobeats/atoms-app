[data-atoms="app"] > article
  position: relative
  width: 100%
  display-box()
  backface-visibility hidden
  overflow: hidden
  vendor(animation-fill-mode, forwards)

  &:not(.active)
    visibility: hidden
    & > section
      display: none

  &.active
    visibility: visible
    & > section
      &:not(.active)
        display: none
      &.active
        display: block
