[data-atoms=app]
  > [data-organism-article]
    order: 1
    width: inherit
    height: inherit
    backface-visibility hidden
    overflow: hidden
    &:not(.active)
      z-index: -1
      visibility: hidden
    &.active
      visibility: visible


@media only screen and (min-width: 801px)
     , only screen and (min-device-width:MOBILE) and (orientation:portrait)
     , only screen and (min-device-height:MOBILE) and (orientation:landscape)
  [data-atoms=app]
    > [data-organism-article]
      order: 1
