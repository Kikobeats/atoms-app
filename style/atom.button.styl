/**
 * Atoms
 *
 * @namespace atom.button.styl
 *
 * @author Javier Jimenez Villar <javi@tapquo.com> || @soyjavi
 */
button
  display: inline-block
  vertical-align: middle
  font-size: inherit
  font-family: inherit
  font-weight: inherit
  line-height: inherit
  text-align: center
  text-decoration: none
  border: none
  cursor: pointer
  outline: none
  background: none
  text-transform: capitalize
  > small
    display: inline-block
    min-width: FONT_SIZE_TINY
    max-width: FONT_SIZE_NORMAL
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    font-size: .75rem
    line-height: 1.1rem
    padding: 0 .2rem 0 .2rem
  > .icon
    line-height: 0.9em
  > .icon + abbr
    margin-left: 0.25em

  &.loading
    > .icon:before, > abbr:before
      content: "\f29d"
      font-family: "Ionicons"
      font-weight: 100
      transform-origin: 50% 50%
      animation loading-spin 2s infinite linear
    > .icon:before
      position: relative
    > abbr:before
      position: absolute
      left: 1rem
    > .icon + abbr:before
      content: ""

  [data-atoms=app] header &
    height: HEADER_HEIGHT
    padding: 0 .4rem
    vertical-align: top
    > abbr
      font-size: FONT_SIZE_SMALL
    > .icon
      font-size: (FONT_SIZE_BIG * 1.25)
    > small
      position: absolute
      top: .6rem

  [data-atoms=app] section &
    margin: 0.2rem 0
    &:not(.big):not(.small):not(.tiny)
      padding: .8rem 1rem
      font-size: FONT_SIZE_NORMAL
    &.big
      padding: 1rem 1.6rem
      font-size: FONT_SIZE_BIG
    &.small
      padding: .5rem .6rem
      font-size: FONT_SIZE_SMALL
    &.tiny
      padding: .3rem .6rem
      font-size: (.9 * FONT_SIZE_TINY)
    &.fluid
      width: 100%
      position: relative
      &:not(.icon) > .icon
        position: absolute
        left: SIZE = 1rem
        line-height: SIZE
    &[disabled]
      cursor: default
    & + button
      margin-right: 0.2rem
    > small
      display: none

  [data-atoms=app] footer &
    > small
      position: absolute
      top: .5rem
      margin-left: -.5rem
