[data-atoms="app"] li

  list-style-type: none
  position: relative
  text-align: -webkit-match-parent
  line-height: inherit

  &[data-atom=li]
    display-box()
    box-orient(horizontal)

    &:not(.anchor)
      padding: PADDING

    &.anchor
      font-size: FONT_SIZE_TINY
      text-transform: uppercase
      padding: PADDING PADDING (PADDING / 3) PADDING

    > figure
      width: SIZE = 2.8rem
      height: SIZE
      margin-right:  PADDING
      background-size: cover
      display-box()
      box-align(center)
      box-pack(center)
      .icon
        display: block
        font-size: SIZE = 1.8rem
        width: SIZE
        height: SIZE

    > div
      box-flex(1)

      span
        float: right
        font-size: FONT_SIZE_TINY

      strong, small
        display: block
        line-height: 1.4rem

      small
        font-size: FONT_SIZE_SMALL
