[data-atoms=app]
  [data-atom-li]
    position: relative
    line-height: inherit
    display-flex()
    flex-direction row
    justify-content center
    align-content center
    align-items center
    text-align: -webkit-match-parent
    list-style-type: none

    &:not(.anchor)
      padding: PADDING
    &.anchor
      font-size: FONT_SIZE_TINY
      padding: (PADDING / 2) 0 0 PADDING

    SIZE = 2.25rem
    > figure, > .icon
      width: SIZE
      height: SIZE
    > figure
      margin-right:  PADDING
      background-size: cover
      display-flex()
      justify-content center
      align-content center
      align-items center
      flex-shrink 0
      .icon
        display: block
        font-size: SIZE = (.6 * SIZE)
        animation loading-icon 2s infinite linear
        color: WHITE
    > .icon
      font-size: SIZE
      margin-right:  (PADDING / 3)

    > div
      flex-grow 2
      span
        float: right
      strong, small
        display: block
      strong
        line-height: FONT_SIZE_BIG
      span, small
        font-size: FONT_SIZE_TINY
        line-height: FONT_SIZE_SMALL
