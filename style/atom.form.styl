/* INPUT Elements */
[data-atoms="app"]
  fieldset, form
    position: relative
    width: 100%
    min-height: 1rem

    &[molecule-search]
      display-box()
      box-pack(justify)
      & > *
        display: inline-block
        box-flex(1)
      & > button
        position: absolute
        right: 1px

  /* -------------------------- DEFAULTS -------------------------- */
  input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], select, textarea, label.select
    display: inline-block
    width: 100%
    margin: 0.2rem 0
    padding: 0.65rem 0.75rem
    font-family: inherit
    font-size: FONT_SIZE_NORMAL
    outline: none
    border: none
    -webkit-appearance: none
    -webkit-user-select: text
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
    box-sizing border-box

    &:focus
      outline: none !important

    &.big
      padding: 0.85rem 0.75rem
      font-size: FONT_SIZE_BIG
    &.small
      padding: 0.45rem 0.75rem
      font-size: FONT_SIZE_SMALL
    &.tiny
      padding: 0.35rem 0.75rem
      font-size: FONT_SIZE_TINY

  /* -------------------------- TEXTAREA -------------------------- */
  textarea
    min-height: 5em
    line-height: FONT_SIZE_BIG

  /* -------------------------- RANGE -------------------------- */
  & input[type="range"]
    height: .2rem
    width: 100%
    margin: 1.5em 0
    padding: 0
    border: none
    -webkit-appearance: none
    outline: none
    &::-webkit-slider-thumb
      position: relative
      width: SIZE = 1.5rem
      height: SIZE
      -webkit-appearance: none
      border: none
