[data-system=modal]
  z-index: 1980
  position: absolute
  top: 0px
  left: 0px
  width: inherit
  height: inherit
  display-flex()
  justify-content center
  align-content center
  align-items center
  overflow: hidden

  &:not(.active)
    visibility: hidden
  &.active
    visibility: visible

  > [data-organism]
    backface-visibility hidden
    transform translateZ(0)

  > [data-extend=loading]
    padding: PADDING
    &::before, &::after
      content: ""
      display: block
      width: SIZE = (PADDING * 2)
      height: SIZE
    &::before
      float: left
      margin-right: (PADDING / 2)
    &::after
      float: right
      margin-left: (PADDING / 2)

  > :not([data-extend=loading])
    width: MODAL_WIDTH
    PAD = (1.75 * PADDING)
    > header
      padding: PAD
      > *
        display: inline-block
        margin-right: .25rem
        font-size: FONT_SIZE_BIG
      + section
        padding-top: 0
    > section
      padding: (.75 * PAD) PAD
    > footer
      padding: (1 * PADDING) (1.75 * PADDING)
