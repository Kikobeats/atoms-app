/* INPUT Elements */
[data-atoms=app]
  [data-atom-input], [data-atom-select], [data-atom-textarea], [data-atom-switch]
    -webkit-appearance: none
    -webkit-touch-callout: none
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
    outline: none

  /* -------------------------- DEFAULTS -------------------------- */
  [data-atom-input]:not([type=range]):not([data-atom-input=autocomplete]), [data-atom-input=autocomplete] > input, [data-atom-select], [data-atom-textarea]
    display: inline-block
    width: 100%
    margin-bottom: .8rem
    padding: 0.5rem 0
    font-family: inherit
    border: none
    box-sizing border-box
    -webkit-user-select: text
    &:focus
      outline: none !important
    &.big
      padding: 0.6rem 0
      font-size: FONT_SIZE_BIG
    &.small
      padding: 0.4rem 0
      font-size: FONT_SIZE_SMALL
    &.tiny
      padding: 0.3rem 0
      font-size: FONT_SIZE_TINY
    &.inline
      width: 49%
      margin-right: 1%

  /* -------------------------- RANGE -------------------------- */
  [data-atom-input][type=range]
    height: .1rem
    width: 100%
    margin: 1.5rem 0
    padding: 0
    border: none
    -webkit-appearance: none
    outline: none
    &::-webkit-slider-thumb
      position: relative
      width: FORM_CIRCLE_HEIGHT
      height: FORM_CIRCLE_HEIGHT
      -webkit-appearance: none
      border: none
